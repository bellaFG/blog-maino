<h2 class="text-center mb-4">Cadastrar</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <!-- Exibindo mensagens de erro -->
  <div>
    <%= render "devise/shared/error_messages", resource: resource %>
  </div>

  <!-- Campo Name -->
  <div class="form-group">
    <%= f.label :name, class: "form-label" %>
    <%= f.text_field :name, class: "form-control", value: resource.name %>
    <!-- Exibindo erro específico para 'name' -->
    <% if resource.errors[:name].any? %>
      <div class="text-danger">
        <%= resource.errors[:name].first %>
      </div>
    <% end %>
  </div>

  <!-- Campo Email -->
  <div class="form-group">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", value: resource.email %>
    <!-- Exibindo erro específico para 'email' -->
    <% if resource.errors[:email].any? %>
      <div class="text-danger">
        <%= resource.errors[:email].first %>
      </div>
    <% end %>
  </div>

  <!-- Campo Password -->
  <div class="form-group">
    <%= f.label :password, class: "form-label" %>
    <% if @minimum_password_length %>
      <small class="form-text text-muted">(mínimo de <%= @minimum_password_length %> caracteres)</small>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
    <!-- Exibindo erro específico para 'password' -->
    <% if resource.errors[:password].any? %>
      <div class="text-danger">
        <%= resource.errors[:password].first %>
      </div>
    <% end %>
  </div>

  <!-- Campo Password Confirmation -->
  <div class="form-group">
    <%= f.label :password_confirmation, class: "form-label" %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
    <!-- Exibindo erro específico para 'password_confirmation' -->
    <% if resource.errors[:password_confirmation].any? %>
      <div class="text-danger">
        <%= resource.errors[:password_confirmation].first %>
      </div>
    <% end %>
  </div>

  <!-- Botão de envio -->
  <div class="form-group text-center">
    <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

