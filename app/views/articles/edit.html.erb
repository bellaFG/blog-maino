<h1>Editar Artigo</h1>

<%= form_with(model: @article, local: true) do |form| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@article.errors.count, "erro") %> impediu este artigo de ser salvo:</h2>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, value: @article.title %>
  </div>

  <div class="field">
    <%= form.label :body %>
    <%= form.text_area :body, value: @article.body %>
  </div>

  <div class="actions">
    <%= form.submit "Atualizar Artigo" %>
  </div>
<% end %>

<%= link_to 'Voltar', articles_path %>
