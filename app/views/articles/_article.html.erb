<div class="card bg-light mb-3">
  <div class="card-body">
    <h4><%= link_to article.title, article %></h4>

    <div class="text-muted mb-2">
      <em>Por <%= article.author %> (<%= l article.created_at, format: :short %>)</em>
    </div>

    <p><%= article.body.truncate(200) %></p>

    <p class="text-muted"><%= pluralize(article.comments.count, 'Comentário') %></p>

    <%= link_to 'Ler Artigo', article, class: 'btn btn-primary' %>

    <% if user_signed_in? && article.user == current_user %>
      <%= link_to 'Editar', edit_article_path(article), class: 'btn btn-secondary' %>
      <%= link_to 'Apagar', article, method: :delete, class: 'btn btn-danger',
        data: { confirm: 'Você tem certeza?' } %>
    <% end %>
  </div>
</div>
