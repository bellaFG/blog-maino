<% if user_signed_in? %>
  <div class="text-center mb-4">
    <%= link_to "Criar Artigo", new_article_path, class: "btn btn-success btn-lg" %>
  </div>
<% end %>

<h2>Artigos</h2>
<div class="articles-list">
  <% @articles.each do |article| %>
    <%= render partial: "article", locals: { article: article } %>
  <% end %>
</div>
